<h1>Listing cars</h1>

<table>
  <tr>
	<th>Branch</th>
    <th>Make</th>
    <th>Engine Size</th>
    <th>Year</th>
    <th>Colour</th>
    <th>Price</th>
	<th>Photo</th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.branch.street %></td>
	<td><%= car.make %></td>
    <td><%= car.enginesize %></td>
    <td><%= car.year %></td>
    <td><%= car.colour %></td>
	<td><%= car.price %></td>
    <td><%= car.photo %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

